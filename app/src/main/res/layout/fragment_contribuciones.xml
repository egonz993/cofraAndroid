<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContribucionesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            Header-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_contribuciones_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/logotipo_confra"
                    android:contentDescription="@string/img_content_description" />

            </androidx.cardview.widget.CardView>

<!--            Soluciones Bancolombia-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textAllCaps="true"
                        android:text="@string/txt_sol_bancolombia"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/WideTextSize"
                        android:textStyle="bold" />

<!--                    Imagen Bancolombia-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/logo_bancolombia"
                            android:contentDescription="@string/img_content_description" />

                    </androidx.cardview.widget.CardView>

<!--                    Corresponsal Bancolombia-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_bancolombia_corresponsal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TitleTextSize"
                                android:textStyle="bold"
                                android:text="@string/txt_corresponsal_titulo"
                                android:drawableRight="@drawable/ic_menu_share"
                                android:drawableEnd="@drawable/ic_menu_share" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/SubtitleTextSize"
                                android:text="@string/txt_corresponsal_cuenta"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

<!--                    Transferencia Bancolombia-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_bancolombia_transferencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TitleTextSize"
                                android:textStyle="bold"
                                android:text="@string/txt_transferencias_titulo"
                                android:drawableRight="@drawable/ic_menu_share"
                                android:drawableEnd="@drawable/ic_menu_share" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/SubtitleTextSize"
                                android:text="@string/txt_transferencias_nombre"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/SubtitleTextSize"
                                android:text="@string/txt_transferencias_nit"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textSize="@dimen/SubtitleTextSize"
                                android:text="@string/txt_transferencias_cuenta"/>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

<!--                    Codigo QR Bancolombia-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_bancolombia_qr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/TitleTextSize"
                                android:textStyle="bold"
                                android:text="@string/txt_qr_titulo"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/SubtitleTextSize"
                                android:text="@string/txt_qr_info"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:src="@drawable/transferencia_qr_bancolombia"
                                android:contentDescription="@string/img_content_description" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

<!--            Soluciones Nacionales-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textAllCaps="true"
                        android:text="@string/txt_sol_nacionales"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/WideTextSize"
                        android:textStyle="bold" />

<!--                    Datafono Virtual-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_wompi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:selectableItemBackground" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:textAllCaps="true"
                                android:text="@string/txt_wompi_titulo"
                                android:textSize="@dimen/WideTextSize"
                                android:textStyle="bold"
                                android:drawableRight="@drawable/ic_menu_share"
                                android:drawableEnd="@drawable/ic_menu_share" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:textAllCaps="true"
                                android:text="@string/txt_wompi_info"
                                android:textSize="@dimen/SubtitleTextSize" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/logo_wompi"
                                android:contentDescription="@string/img_content_description" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

<!--            Soluciones internacionales-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:text="@string/txt_sol_internacionales"
                        android:textSize="@dimen/WideTextSize"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_paypal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:selectableItemBackground" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:textAllCaps="true"
                                android:text="@string/txt_paypal_titulo"
                                android:textSize="@dimen/WideTextSize"
                                android:textStyle="bold"
                                android:drawableRight="@drawable/ic_menu_share"
                                android:drawableEnd="@drawable/ic_menu_share" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:textAllCaps="true"
                                android:text="@string/txt_paypal_info"
                                android:textSize="@dimen/SubtitleTextSize" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/logo_paypalme"
                                android:contentDescription="@string/img_content_description" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>